@model Agemcia.ViewModels.ReporteFormViewModel
@{
    ViewBag.Title = "GuardarReporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Nuevo Reporte</h2>
    <br>
    @using (Html.BeginForm("GuardarReporte", "Reportes"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Reporte.fecha)
            @Html.TextBoxFor(m => m.Reporte.fecha, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Reporte.vales)
        </div>
        <div>
            <button type="button" id="agregarvale" class="btn btn-primary">Agregar Vale</button>
        </div>
        @Html.HiddenFor(m => m.Reporte.id)
        <button type="submit" class="btn btn-primary">Guardar</button>
    }
</div>